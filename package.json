{
  "name": "craftchangelogs",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.7.6",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "license": "MIT",
  "repository": "nyxb/craftchangelogs",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "craftchangelogs": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "craftchangelogs": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm craftchangelogs --release --push && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "@nyxb/convert-conmitmoji": "^0.0.2",
    "c12": "^1.4.2",
    "colorette": "^2.0.20",
    "consola": "^3.2.3",
    "execa": "^8.0.1",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.4.0",
    "ofetch": "^1.3.3",
    "open": "^9.1.0",
    "pathe": "^1.1.1",
    "pkg-types": "^1.0.3",
    "scule": "^1.0.0",
    "semver": "^7.5.4",
    "std-env": "^3.4.3",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@nyxb/eslint-config": "^1.0.0-beta.8",
    "@types/node": "^20.6.4",
    "@types/semver": "^7.5.2",
    "@vitest/coverage-v8": "^0.34.5",
    "eslint": "^8.50.0",
    "jiti": "^1.20.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "unbuild": "^1.2.1",
    "vitest": "^0.34.5"
  }
}
